#include <iostream>
using namespace std;

int main() {
    int a[3][3];
    int sumMain = 0, sumSecondary = 0;

    
    cout << "Enter elements of 3x3 matrix:\n";
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cin >> a[i][j];
        }
    }


    for (int i = 0; i < 3; i++) {
        sumMain = a[i][i];           
        sumSecondary = a[i][2 - i];
    }

    
    cout << "Sum of main diagonal elements: " << sumMain << endl;
    cout << "Sum of secondary diagonal elements: " << sumSecondary << endl;
    cout << "Sum of both diagonals: " << sumMain + sumSecondary << endl;

    return 0;
}

OUTPUT:
Enter elements of 3x3 matrix:
2 3 4
7 5 6
7 6 5
Sum of main diagonal elements: 12
Sum of secondary diagonal elements: 16
Sum of both diagonals: 28

